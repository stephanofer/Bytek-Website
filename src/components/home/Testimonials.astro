---
import ReviewCard from "@/components/home/TestimonialCard.astro";
import Arrow from "@/assets/svg/Arrow.svg";

const reviews = [
  {
    stars: 5,
    text: "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor.",
    author: "Yin Coaquira",
    role: "Front End Developer",
    image: "/assets/madrid.png",
  },
  {
    stars: 4,
    text: "Otra reseña con solo 4 estrellas.",
    author: "Jhonatan Fernandez",
    role: "Backend Developer",
    image: "/assets/madrid.png",
  },
  {
    stars: 3,
    text: "Una reseña de 3 estrellas para probar.",
    author: "Nayla Vasquez",
    role: "Project Manager",
    image: "/assets/madrid.png",
  },
];
---

<div class="w-full bg-yellow-100 py-16">
  <div class="max-w-7xl mx-auto px-6 text-center">
    <p class="text-sm font-semibold text-red-500 uppercase tracking-widest">
      Lorem ipsum dolor sit
    </p>
    <h2 class="mt-2 text-4xl md:text-5xl font-bold text-gray-900 leading-tight">
      Lorem ipsum dolor sit ametasd
    </h2>

    <div class="mt-12 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        reviews.map((review) => (
          <ReviewCard
            stars={review.stars}
            text={review.text}
            author={review.author}
            role={review.role}
            image={review.image}
          />
        ))
      }
    </div>

    <div class="mt-12 text-center">
      <a
        href="#"
        class="inline-flex items-center space-x-2 bg-gray-900 text-white font-semibold px-6 py-3 rounded-full hover:bg-gray-800 transition"
      >
        <span>Lorem ipsum</span>
        <Arrow />
      </a>
    </div>
  </div>
</div>
