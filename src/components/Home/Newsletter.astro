<section class="w-full bg-[#EFEFE8] text-gray-900 py-16 relative overflow-hidden">
  <div class="absolute left-0 top-1/2 -translate-y-1/2 -ml-8">
    <svg width="64" height="64" viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M100 0C50 0 0 50 0 100" stroke="#888888" stroke-width="2" stroke-dasharray="2 4" transform="scale(-1, 1) rotate(45)" opacity="0.5"/>
    </svg>
  </div>
  
  <div class="absolute right-0 top-1/2 -translate-y-1/2 -mr-8">
    <svg width="64" height="64" viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M100 0C50 0 0 50 0 100" stroke="#888888" stroke-width="2" stroke-dasharray="2 4" transform="rotate(45)" opacity="0.5"/>
    </svg>
  </div>

  <div class="max-w-7xl mx-auto px-6 flex flex-col md:flex-row items-center justify-between">
    <div class="text-center md:text-left md:w-1/2 mb-8 md:mb-0">
      <h2 class="text-4xl md:text-5xl font-bold leading-tight">
        Suscríbete <br> a nuestro Boletín Informativo
      </h2>
    </div>

    <div class="flex flex-col sm:flex-row items-center space-y-4 sm:space-y-0 sm:space-x-4 w-full md:w-1/2 justify-center">
      <input 
        type="email" 
        placeholder="@tu correo electrónico..." 
        class="w-full sm:w-auto flex-grow py-3 px-6 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-400"
      >
      <button 
        class="w-full sm:w-auto py-3 px-8 rounded-lg bg-[#FFD97D] text-gray-800 font-bold hover:bg-[#FFC94D] transition duration-300"
      >
        Suscribirse →
      </button>
    </div>
  </div>
</section>