---
import TeamCard from "./TeamCard.astro";

import Arrow from "@/assets/svg/Arrow.svg";

const teamMembers = [
  {
    name: "Yin Coaquira",
    position: "Front End Mega-Siñor Developer",
    image: "/assets/madrid.png",
  },
  {
    name: "Jhonatan Fernandez",
    position: "Front End Ultra-Siñor Developer",
    image: "/assets/madrid.png",
  },
  {
    name: "Héctor Vega",
    position: "Backend Junior Developer",
    image: "/assets/madrid.png",
  },
  {
    name: "Nayla Vasquez",
    position: "Masajista de uno de los siñors",
    image: "/assets/madrid.png",
  },
];
---

<section class="w-full py-16 relative">
  <div class="max-w-7xl mx-auto px-6 relative z-10">
    <header
      class="flex flex-col md:flex-row md:items-center justify-between gap-6 mb-12"
    >
      <div class="text-left md:flex-1">
        <p class="text-sm font-semibold text-red-500 uppercase tracking-widest">
          Conoce al equipo
        </p>
        <h2 class="text-4xl md:text-5xl font-bold text-gray-900 leading-tight">
          Miembros del equipo con experiencia
        </h2>
      </div>

      <div class="shrink-0">
        <a
          href="#"
          class="inline-flex items-center border-2 border-gray-900 text-gray-900 font-semibold px-6 py-3 rounded-full hover:bg-gray-900 hover:text-white transition gap-2"
        >
          <span>Conoce más</span>
          <Arrow />
        </a>
      </div>
    </header>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
      {
        teamMembers.map((member) => (
          <TeamCard
            name={member.name}
            position={member.position}
            image={member.image}
          />
        ))
      }
    </div>
  </div>

  <div class="absolute inset-0 bg-yellow-200 opacity-50"></div>
</section>
